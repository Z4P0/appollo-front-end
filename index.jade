doctype html
html(lang="en").no-js
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    title Appollo Commander
    meta(name="description", content="A web project")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="apple-touch-icon", href="apple-touch-icon.png")
    link(href="https://fonts.googleapis.com/css?family=Source+Sans+Pro", rel="stylesheet", type="text/css")
    link(rel="stylesheet", href="css/styles.css")

  body
    a(href="#main").show-for-sr Skip to main content
    .container
      header.header
        .row.page-section
          .columns
            h1.no-margin Appollo Commander
      main#main
        hr
        section#intro.row.page-section.thick-margin-bottom.align-center
          .columns.medium-8.large-6
            h2 Screen #2 - Profile Setup
            div.page-section
              //- profile progress meter
              .profile-progress
                span.circle.active 1
                span.circle 2
                span.circle 3
                span.circle 4
                .progress(role="progressbar", tabindex="0", aria-valuenow="0", aria-valuemin="0", aria-valuemax="100")
                  .progress-meter
                  //- .progress-meter(style="width: 50%;")
              hr
              //- info holder things
              #profile-questions.profile-questions
                #step-1.profile-question.active
                  //- title/ field name
                  h3.field-title 1. Your Name:
                  //- input
                  input#name(type="text", name="name", placeholder="Firstname Lastname")
                  //- controls/ next-prev
                  div
                    a(href="#step-2").button Ok
                #step-2.profile-question
                  //- title/ field name
                  h3.field-title 2. Birthday:
